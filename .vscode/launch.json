{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to running node process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current JS File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal"
        },
    ]
}