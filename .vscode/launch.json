{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to running node process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/nodejs/udemy/2-Express/app.js",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "console": "integratedTerminal"
        },
    ]
}